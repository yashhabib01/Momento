<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >

    <ImageView
        android:id="@+id/myfeed_imageVIew"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        android:layout_height="400dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myfeed_user_image"
        app:srcCompat="@drawable/rectangle" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/myfeed_user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/myfeed_imageVIew"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_account_circle_24" />

    <TextView
        android:id="@+id/myfeed_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="TextView"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/myfeed_user_image"
        app:layout_constraintStart_toEndOf="@+id/myfeed_user_image"
        app:layout_constraintTop_toTopOf="@+id/myfeed_user_image" />

    <ImageView
        android:id="@+id/likethepost"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="@+id/myfeed_imageVIew"
        app:layout_constraintTop_toBottomOf="@+id/myfeed_imageVIew"
        app:srcCompat="@drawable/ic_baseline_favorite_border_24"
        app:tint="@color/textColor" />

    <View
        android:id="@+id/divider9"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likethepost" />
</androidx.constraintlayout.widget.ConstraintLayout>